<section class="hero" data-section="home-hero">
  <div class="hero__image-wrap">
    {%- if section.settings.image != blank -%}
      {% render 'image-responsive',
        image: section.settings.image,
        class: 'hero__image',
        sizes: '(max-width: 767px) 100vw, 52vw',
        loading: 'eager',
        fetchpriority: 'high'
      %}
    {%- else -%}
      {% render 'jewelry-fallback-image', class: 'hero__image', index: 1, loading: 'eager', fetchpriority: 'high' %}
    {%- endif -%}
  </div>

  <div class="hero__content">
    <div class="hero__content-inner">
      <h1 class="hero__title" data-split="words">
        {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'heading_line' -%}
              <span class="hero__title-line" {{ block.shopify_attributes }}>{{ block.settings.text }}</span>
            {%- endif -%}
          {%- endfor -%}
        {%- else -%}
          <span class="hero__title-line">Swarna</span>
          <span class="hero__title-line">Palace</span>
        {%- endif -%}
      </h1>
      <p class="hero__sub">{{ section.settings.subtext | default: 'Discover timeless elegance forged in silver. Designed for the modern muse, crafted for eternity.' }}</p>
      <a
        href="{{ section.settings.cta_url | default: '/collections/all' }}"
        class="btn btn--primary btn--magnetic hero__cta"
      >
        {{ section.settings.cta_label | default: 'EXPLORE COLLECTION' }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home Hero",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Hero Image" },
    { "type": "text", "id": "subtext", "label": "Subtext", "default": "Discover timeless elegance forged in silver. Designed for the modern muse, crafted for eternity." },
    { "type": "text", "id": "cta_label", "label": "CTA Label", "default": "EXPLORE COLLECTION" },
    { "type": "url", "id": "cta_url", "label": "CTA URL" }
  ],
  "blocks": [
    {
      "type": "heading_line",
      "name": "Heading Line",
      "settings": [
        { "type": "text", "id": "text", "label": "Line", "default": "Silver" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Hero",
      "blocks": [
        { "type": "heading_line", "settings": { "text": "Swarna Palace" } }
      ]
    }
  ]
}
{% endschema %}
