<section class="contact-header" data-section="contact-header">
  <div class="contact-header__content">
    <h1 class="contact-header__title" data-split="lines">
      {{ section.settings.heading | default: 'GET IN TOUCH' }}
    </h1>
    {%- if section.settings.subtext != blank -%}
      <p class="contact-header__sub">{{ section.settings.subtext }}</p>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Contact Header",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "GET IN TOUCH" },
    { "type": "text", "id": "subtext", "label": "Subtext", "default": "CONCIERGE SERVICES & GENERAL INQUIRIES" }
  ],
  "presets": [{ "name": "Contact Header" }]
}
{% endschema %}
