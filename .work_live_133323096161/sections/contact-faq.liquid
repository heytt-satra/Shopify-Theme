<section class="faq" data-section="contact-faq">
  <div class="faq__container container">
    <h2 class="faq__heading">{{ section.settings.heading | default: 'COMMON QUESTIONS' }}</h2>
    <div class="faq__list">
      {%- for block in section.blocks -%}
        <div class="faq-item" {{ block.shopify_attributes }}>
          <button class="faq-item__question" type="button">
            <span>{{ block.settings.question }}</span>
            <span class="faq-item__icon">+</span>
          </button>
          <div class="faq-item__answer">
            <div class="faq-item__answer-inner">
              {{ block.settings.answer }}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "COMMON QUESTIONS" }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        { "type": "text", "id": "question", "label": "Question", "default": "What is your shipping policy?" },
        { "type": "textarea", "id": "answer", "label": "Answer", "default": "We ship worldwide via DHL Express. Domestic orders typically arrive within 2-3 business days." }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "blocks": [
        { "type": "faq", "settings": { "question": "What is your shipping policy?", "answer": "We ship worldwide via DHL Express. Domestic orders typically arrive within 2-3 business days, while international orders take 5-7 business days. All shipments are insured and require a signature upon delivery." } },
        { "type": "faq", "settings": { "question": "Do you offer custom sizing?", "answer": "Yes. Select pieces are available in custom sizes. Contact us with your requirements and we'll guide you through the bespoke process." } },
        { "type": "faq", "settings": { "question": "How do I care for my silver jewelry?", "answer": "Store pieces individually in the dust bag provided. Polish with a microfiber cloth. Avoid prolonged exposure to water, perfume, and chemicals. Professional cleaning recommended once a year." } },
        { "type": "faq", "settings": { "question": "Can I return an item?", "answer": "We offer 14-day returns on unworn items with original tags and packaging. Custom and sale items are final sale." } },
        { "type": "faq", "settings": { "question": "Is the packaging eco-friendly?", "answer": "All packaging is made from recyclable and FSC-certified materials. We use zero single-use plastics. Our dust bags are organic cotton." } }
      ]
    }
  ]
}
{% endschema %}
