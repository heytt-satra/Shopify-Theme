<section class="product-spots" data-section="home-product-spots">
  <div class="product-spots__header">
    <h2 class="product-spots__heading">{{ section.settings.heading | default: 'Latest Drops' }}</h2>
  </div>
  <div class="product-spots__grid">
    {%- assign collection = collections[section.settings.collection] -%}
    {%- if collection != blank -%}
      {%- for product in collection.products limit: 4 -%}
        {% render 'product-card', product: product %}
      {%- endfor -%}
    {%- else -%}
      {%- for i in (1..4) -%}
        <article class="product-card">
          <div class="product-card__image-wrap">
            {% render 'jewelry-fallback-image', class: 'product-card__image', index: i, loading: 'lazy' %}
          </div>
          <div class="product-card__info">
            <span class="product-card__title">Sample Product {{ i }}</span>
            <span class="product-card__price">â‚¹4,500</span>
          </div>
        </article>
      {%- endfor -%}
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Product Spots",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "Latest Drops" },
    { "type": "collection", "id": "collection", "label": "Source Collection" }
  ],
  "presets": [{ "name": "Product Spots" }]
}
{% endschema %}
