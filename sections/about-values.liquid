<section class="values values--commitments" data-section="about-values">
  <div class="values__container container">
    <h2 class="values__heading">{{ section.settings.heading | default: 'Our Commitments' }}</h2>
    <div class="values__grid">
      {%- for block in section.blocks -%}
        <article class="values__col" {{ block.shopify_attributes }}>
          <div class="values__icon" aria-hidden="true">
            {%- case block.settings.icon -%}
              {%- when 'silver' -%}
                <svg viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                  <g fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 35l8-14 19 6-8 14z"/>
                    <path d="M32 42l8-14 14 4-8 14z"/>
                    <path d="M20 20l20 6"/>
                    <path d="M38 27l16 5"/>
                    <path d="M46 14l2 3m5 2l3-1m-4 7l3 2"/>
                  </g>
                </svg>
              {%- when 'artisan' -%}
                <svg viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                  <g fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 40c0-7 6-13 13-13h8c3 0 6-3 6-6v-2"/>
                    <path d="M14 40v4c0 5 4 9 9 9h10c7 0 12-5 12-12V20"/>
                    <path d="M43 12l9 9"/>
                    <path d="M48 7l9 9-4 4-9-9z"/>
                    <path d="M26 30v13"/>
                    <path d="M33 30v10"/>
                  </g>
                </svg>
              {%- when 'ethics' -%}
                <svg viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                  <g fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M32 54c10 0 18-8 18-18s-8-18-18-18-18 8-18 18"/>
                    <path d="M14 38l-4 2 1-5"/>
                    <path d="M32 22c6 0 10 4 10 9 0 8-10 15-10 15s-10-7-10-15c0-5 4-9 10-9z"/>
                    <path d="M32 28c-2 0-4 2-4 4 0 3 4 6 4 6s4-3 4-6c0-2-2-4-4-4z"/>
                  </g>
                </svg>
              {%- when 'delivery' -%}
                <svg viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                  <g fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 25h26l8 7v14H17z"/>
                    <path d="M43 25v21"/>
                    <path d="M17 25l13-8 21 8"/>
                    <circle cx="25" cy="46" r="3"/>
                    <circle cx="44" cy="46" r="3"/>
                    <path d="M7 30h8m-5 6h5"/>
                  </g>
                </svg>
              {%- else -%}
                <svg viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                  <g fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 24l11-11 11 11-11 11z"/>
                    <path d="M32 35v15"/>
                    <path d="M20 50c2-5 7-8 12-8s10 3 12 8"/>
                    <path d="M48 15l3-4m-2 8h5m-4 4l3 3"/>
                  </g>
                </svg>
            {%- endcase -%}
          </div>
          <h3 class="values__title">{{ block.settings.title }}</h3>
          {%- if block.settings.description != blank -%}
            <p class="values__desc">{{ block.settings.description }}</p>
          {%- endif -%}
        </article>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Commitments",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Our Commitments" }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Commitment",
      "limit": 6,
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "silver",
          "options": [
            { "value": "silver", "label": "Silver" },
            { "value": "artisan", "label": "Artisan" },
            { "value": "ethics", "label": "Ethics" },
            { "value": "delivery", "label": "Delivery" },
            { "value": "custom", "label": "Customisation" }
          ]
        },
        { "type": "text", "id": "title", "label": "Title", "default": "Assured 925 Silver" },
        { "type": "textarea", "id": "description", "label": "Description" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Commitments",
      "blocks": [
        { "type": "value", "settings": { "icon": "silver", "title": "Assured 925 Silver" } },
        { "type": "value", "settings": { "icon": "artisan", "title": "Handcrafted by Local Artisans of Jaipur" } },
        { "type": "value", "settings": { "icon": "ethics", "title": "Lifetime Plating* T&C Applied" } },
        { "type": "value", "settings": { "icon": "delivery", "title": "Free Delivery Across India" } },
        { "type": "value", "settings": { "icon": "custom", "title": "Jewellery Customisation as per Need" } }
      ]
    }
  ]
}
{% endschema %}
